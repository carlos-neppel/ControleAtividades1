@model IEnumerable<ControleAtividades.Models.Atividade>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Adicionar Nova Atividade", "Create")
</p>

<div class="panel panel-danger">
    <div class="panel-heading">
        <h3 class="panel-title">A Fazer</h3>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Titulo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prioridade)
                </th>
                @*<th>
                    @Html.DisplayNameFor(model => model.StatusAtividade)
                </th>*@
                <th></th>
            </tr>

            @foreach (var item in Model.Where(a => a.StatusAtividade.Equals(ControleAtividades.Models.Atividade.Status.AFazer)))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prioridade)
                    </td>
                    @*<td>
                        @Html.DisplayFor(modelItem => item.StatusAtividade)
                    </td>*@
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.AtividadeID }) |
                        @Html.ActionLink("Detalhes", "Details", new { id = item.AtividadeID }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.AtividadeID })
                    </td>                   
                    <td>
                        
                            @Html.ActionLink(" ", "MudaStatus", new { id = item.AtividadeID, comando = "abaixo" }, new{@class ="glyphicon glyphicon-arrow-down"})
                        
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

